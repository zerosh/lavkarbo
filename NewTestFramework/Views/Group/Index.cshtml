@using DBFactory
@{
    ViewBag.Title = "List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <a href="Group/Create">Lag ny</a>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Unique Id
                    </th>
                    <th>
                        Navn
                    </th>

                    <th>
                        Handling
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var group in DBFactory.DB.Instance.GetGroups(int.MaxValue))
                {
                    <tr>
                        <td>
                            @group.Id
                        </td>
                        <td>
                            @group.Name
                        </td>
                        <td>
                            <a href="Group/Delete/@group.Id">Slett</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
