@using DBFactory
@using DBFactory.Structures

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Unique Id
                    </th>

                    <th>
                        Tittel
                    </th>

                    <th>
                        Gruppe
                    </th>

                    <th>
                        Bilde
                    </th>

                    <th>
                        Vis for alle
                    </th>

                    <th>
                        Ingredienser
                    </th>

                    <th>
                        Vanskelighetsgrad
                    </th>

                    <th>
                        Tid i min.
                    </th>

                    <th>
                        Handling
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var recipe in DB.Instance.GetRecipes(int.MaxValue))
                {
                    <tr>
                        <td>
                            @recipe.ID
                        </td>
                        <td>
                            @recipe.Title
                        </td>
                        <td>
                            @{ 
                                var group = DB.Instance.GetGroup(recipe.GroupId);
                            }

                            @if (group != null)
                            {
                                @Html.ActionLink(@group.Name, "ViewGroup", new { id = group.Id})
                            }
                        </td>

                        <td>
                            <img src="@recipe.FinishedMealImage.Image" width="150" height="150" />
                        </td>

                        <td>
                            @{ 
                                string publish = @recipe.Published == true ? "Ja" : "Nei";
                            }

                            @publish
                        </td>

                        <td>
                            0
                        </td>

                        <td>
                            @recipe.Difficulty
                        </td>

                        <td>
                            @recipe.PreparationTime
                        </td>

                        <td>
                            @Html.ActionLink("Ingredienser", "Ingredient", new { id = @recipe.ID }, null)
                            @Html.ActionLink("Se oppskrift", "Details", new { id = @recipe.ID }, null)
                            | @Html.ActionLink("Rediger", "Edit", new { id = @recipe.ID }, null) 
                            | @Html.ActionLink("Slett", "Delete", new { id = @recipe.ID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
